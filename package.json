  "scripts": {
    "build:frontend": "nx build frontend",
    "build:backend": "nx build backend",
    "dev:frontend": "nx run frontend:serve:development",
    "dev:backend": "nx run backend:serve:development",
    "production:frontend": "nx serve frontend --configuration=production --host=0.0.0.0",
    "production:backend": "nx serve backend --configuration=production --host=0.0.0.0",
    "start:daemon": "nx daemon",
    "reset": "nx reset",

    "test": "npm run test:frontend && npm run test:backend",
    "test:frontend": "nx test frontend",
    "test:backend": "nx test backend",

    "docker:run": "npm run docker:down && npm run docker:rm && npm run docker:rmi && npm run docker:build && npm run docker:up",
    "docker:down": "docker-compose down",
    "docker:rm": "docker-compose rm -s -f frontend backend",
    "docker:rmi": "docker rmi --force performance-tracker-backend performance-tracker-frontend",
    "docker:build": "npm run build:frontend && npm run build:backend",
    "docker:up": "docker-compose up"
  },
